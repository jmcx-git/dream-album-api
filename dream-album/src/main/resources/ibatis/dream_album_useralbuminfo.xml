	<update id="updateUserAlbumInfoTitle" parameterClass="com.dreambox.core.dto.album.UserAlbumInfo">
		<![CDATA[
		UPDATE `user_album_info` SET `title` = #title# WHERE `id`=#id# and `user_id` = #userId# ;
		]]>
	</update>
	<update id="updateUserAlbumInfoCompleteAndPreImg"
