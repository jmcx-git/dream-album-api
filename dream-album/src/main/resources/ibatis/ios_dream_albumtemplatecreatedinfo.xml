	<insert id="insertOrUpdateAlbumTemplateCreatedInfo"
	parameterClass="com.dreambox.core.dto.album.AlbumTemplateCreatedInfo">
		<![CDATA[
		INSERT IGNORE INTO wechat_app_album_created_info (`id`,`user_id`,`template_id`,`handle_infos`,`h5_url`,`png_url`,
		`status`,`update_time`,`create_time`)
		VALUES(null, #userId#,#templateId#,#handleInfos#,#h5Url#,#pngUrl#,0, now(),now())
		]]>
	</insert>
	<insert id="insertOrIgnoreAlbumTemplateCreatedInfo"
	parameterClass="com.dreambox.core.dto.album.AlbumTemplateCreatedInfo">
		<![CDATA[
		INSERT IGNORE INTO wechat_app_album_created_info (`id`,`user_id`,`template_id`,`handle_infos`,`h5_url`,`png_url`,
		`status`,`update_time`,`create_time`)
		VALUES(null, #userId#,#templateId#,#handleInfos#,#h5Url#,#pngUrl#,0, now(),now())
		]]>
	</insert>
	<update id="updateAlbumTemplateCreatedInfoStatus"
	parameterClass="com.dreambox.core.dto.album.AlbumTemplateCreatedInfo">
		<![CDATA[
		UPDATE `wechat_app_album_created_info` SET `status` = #status# WHERE `id=#id# ;
		]]>
	</update>
	<select id="queryAlbumTemplateCreatedInfoById" parameterClass="java.lang.Integer"
	resultMap="albumtemplatecreatedinfo">
		<![CDATA[
		SELECT * FROM `wechat_app_album_created_info` WHERE `id` = #startId#;
		]]>
	</select>
	<select id="queryAlbumTemplateCreatedInfoListByStartId"
	parameterClass="java.util.Map" resultMap="albumtemplatecreatedinfo">
		<![CDATA[
		SELECT * FROM `wechat_app_album_created_info` WHERE `id` > #startId# ORDER BY id LIMIT #size#;
		]]>
	</select>
	<select id="queryAlbumTemplateCreatedInfoByIds" parameterClass="java.util.Map"
	resultMap="albumtemplatecreatedinfo">
		SELECT * FROM `wechat_app_album_created_info`
		<iterate property="ids" conjunction="," close=")" open=" WHERE id in (">#ids[]#</iterate>
	</select>
	<select id="queryAlbumTemplateCreatedInfoListByFilter"
	parameterClass="java.util.Map" resultMap="albumtemplatecreatedinfo">
		SELECT * FROM `wechat_app_album_created_info`
		<dynamic prepend=" WHERE ">
			<isPropertyAvailable property="status">
				<isNotNull property="status" prepend=" and ">`status` =
					#status#</isNotNull>
			</isPropertyAvailable>
		</dynamic>
		ORDER BY id DESC LIMIT #start#, #size#
	</select>
	<select id="countAlbumTemplateCreatedInfoByFilter"
	parameterClass="java.util.Map" resultClass="java.lang.Long">
		SELECT COUNT(*) FROM `wechat_app_album_created_info`
		<dynamic prepend=" WHERE ">
			<isPropertyAvailable property="status">
				<isNotNull property="status" prepend=" and ">`status` =
					#status#</isNotNull>
