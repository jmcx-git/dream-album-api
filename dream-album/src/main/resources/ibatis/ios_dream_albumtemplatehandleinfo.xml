	parameterClass="com.dreambox.core.dto.album.AlbumTemplateHandleInfo">
		<![CDATA[
		INSERT IGNORE INTO wechat_app_album_handle_info (`id`,`user_id`,`template_id`,`handle_infos`,`step`,
		`status`,`update_time`,`create_time`)
		VALUES(null, #userId#,#templateId#,#handleInfos#,#step#,0, now(),now())
