	<update id="updateAlbumTemplateHandleInfoStatus"
	parameterClass="com.dreambox.core.dto.album.AlbumTemplateHandleInfo">
		<![CDATA[
		UPDATE `wechat_app_album_handle_info` SET `status` = #status# WHERE `user_id=#userId# ;
		]]>
