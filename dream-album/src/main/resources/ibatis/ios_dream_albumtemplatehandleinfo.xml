	<select id="queryAlbumTemplateHandleInfoListByStartId"
	parameterClass="java.util.Map" resultMap="albumtemplatehandleinfo">
		<![CDATA[
		SELECT * FROM `wechat_app_album_handle_info` WHERE `id` > #startId# ORDER BY id LIMIT #size#;
		]]>
